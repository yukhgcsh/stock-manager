<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">株式収支管理アプリ</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-dashboard" aria-hidden="true"></span> ダッシュボード
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="funds">
                <span class="oi oi-basket" aria-hidden="true"></span> 元手管理
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" @onclick="ToggleStockNavMenu">
                <span class="oi oi-list-rich" aria-hidden="true"></span> 株式
            </NavLink>
        </div>
        @if (stockCollapseMenu)
        {
            <div class="nav-item px-3 ms-3">
                <NavLink class="nav-link" href="stocks">
                    <span class="oi oi-plus" aria-hidden="true"></span> 株式情報
                </NavLink>
            </div>
            <div class="nav-item px-3 ms-3">
                <NavLink class="nav-link" href="stockHistory">
                    <span class="oi oi-plus" aria-hidden="true"></span> 取引履歴
                </NavLink>
            </div>
            <div class="nav-item px-3 ms-3">
                <NavLink class="nav-link" href="featuredStock">
                    <span class="oi oi-eye" aria-hidden="true"></span> 注目銘柄
                </NavLink>
            </div>
        }
        <div class="nav-item px-3">
            <NavLink class="nav-link" @onclick="ToggleInvestmentTrustNavMenu">
                <span class="oi oi-list-rich" aria-hidden="true"></span> 投資信託
            </NavLink>
        </div>
        @if (investimentTrustCollapseMenu)
        {
            <div class="nav-item px-3 ms-3">
                <NavLink class="nav-link" href="investmentTrust">
                    <span class="oi oi-plus" aria-hidden="true"></span> 投資信託
                </NavLink>
            </div>
            <div class="nav-item px-3 ms-3">
                <NavLink class="nav-link" href="investmentTrustHistory">
                    <span class="oi oi-plus" aria-hidden="true"></span> 取引履歴
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    private bool stockCollapseMenu = false;
    private bool investimentTrustCollapseMenu = false;
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void ToggleStockNavMenu()
    {
        stockCollapseMenu = !stockCollapseMenu;
    }

    private void ToggleInvestmentTrustNavMenu()
    {
        investimentTrustCollapseMenu = !investimentTrustCollapseMenu;
    }
}
